<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gedrückter Zustand - aktiviert / eingepresst -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Schatten (innen) -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#1a000000" />
                    <corners android:radius="8dp" />
                    <padding android:bottom="2dp" android:right="2dp" android:left="1dp" android:top="1dp" />
                </shape>
            </item>
            <!-- Hauptform mit Gradient -->
            <item android:bottom="2dp" android:right="2dp" android:left="1dp" android:top="1dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:type="linear"
                        android:angle="90"
                        android:startColor="#3a5a6f"
                        android:centerColor="#2d4858"
                        android:endColor="#1a2a38" />
                    <corners android:radius="7dp" />
                    <stroke android:width="1.5dp" android:color="#0a1a28" />
                </shape>
            </item>
            <!-- Spiegelungseffekt (oben) -->
            <item android:bottom="24dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:type="linear"
                        android:angle="90"
                        android:startColor="#4a8aaf"
                        android:endColor="#2a5a7f" />
                    <corners android:radius="7dp" android:topLeftRadius="7dp" android:topRightRadius="7dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Normaler Zustand -->
    <item>
        <layer-list>
            <!-- Äußerer Schatten -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#2a000000" />
                    <corners android:radius="9dp" />
                </shape>
            </item>
            <!-- Hauptform mit Gradient -->
            <item android:bottom="3dp" android:right="3dp" android:left="2dp" android:top="2dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:type="linear"
                        android:angle="90"
                        android:startColor="#4a7a9f"
                        android:centerColor="#3a6a8f"
                        android:endColor="#2a5a7f" />
                    <corners android:radius="7dp" />
                    <stroke android:width="2dp" android:color="#1a3a58" />
                </shape>
            </item>
            <!-- Spiegelungseffekt (obere Hälfte) -->
            <item android:bottom="24dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:type="linear"
                        android:angle="90"
                        android:startColor="#6aaadf"
                        android:endColor="#3a7aaf" />
                    <corners android:radius="6dp" android:topLeftRadius="6dp" android:topRightRadius="6dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>

