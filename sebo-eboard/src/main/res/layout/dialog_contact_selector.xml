<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dialog_contact_chose_contact"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn_close_dialog"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:minWidth="48dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/dialog_contact_x"
            android:textSize="20sp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/contacts_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="300dp"
        android:background="#F5F5F5" />

    <TextView
        android:id="@+id/no_contacts_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/contact_dialog_no_contact_found"
        android:textAlignment="center"
        android:textColor="#666666"
        android:padding="24dp"
        android:visibility="gone" />

    <!-- Separator -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Schnelle Aktionen -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/btn_decrypt_clipboard"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/keyboard_view_decrypt"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_contact_decrypt_from_clipboard"
            android:textSize="12sp"
            android:textColor="#666666"
            android:textAlignment="center"
            android:paddingBottom="8dp" />

    </LinearLayout>

</LinearLayout>

